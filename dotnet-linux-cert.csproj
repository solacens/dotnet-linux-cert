<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Start of target framework(s) -->
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <!-- End of target framework(s) -->
    <!-- Start of metadata for 'dotnet pack' -->
    <PackageId>dotnet-linux-cert</PackageId>
    <VersionPrefix>0.0.2</VersionPrefix>
    <Description>dotnet CLI global tool to help handling certs on linux container</Description>
    <PackageTags>tools</PackageTags>
    <IsPackable>true</IsPackable>
    <Authors>solacens</Authors>
    <PackageProjectUrl>https://github.com/solacens/dotnet-linux-cert</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>Copyright 2019 (c) solacens. All rights reserved.</Copyright>
    <!-- End of metadata for 'dotnet pack' -->
    <!-- Start of other attributes -->
    <OutputType>Exe</OutputType>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dotnet-linux-cert</ToolCommandName>
    <!-- End of other attributes -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.5.0" />
  </ItemGroup>

</Project>
